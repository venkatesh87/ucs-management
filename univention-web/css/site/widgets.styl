@import "../variables"

.umc .umcMultiInput
	margin-bottom: 1.5em

	.umcMultiInputContainer
		position: relative


	/* add a padding to the last element of a row */
	.umcMultiInputContainer .umcMultiInputLastRowEntry
		padding-right: 45px

	.umcMultiInputRemoveButton
		/* move the removal button over the last element of the row */
		margin: 0 0 0 -35px
		box-shadow: none

		&.dijitButtonFocused
			.dijitButtonNode
				background-color: $button-hovered-background-color

		.dijitButtonNode
			height: 32px
			background-color: transparent

			.dijitButtonContents
				line-height: @height

				.multiInputTrashCanIcon
					background-image: url('../images/multiInputTrashCan.svg')
					background-size: 100% 100%
					width: 16px
					height: 16px
					margin: 0 8px
					transition: opacity 0.2s
					opacity: 0.4
					^[-3].dijitButtonHover ^[-3..-1]
						opacity: 0.7
					^[-3].dijitButtonActive ^[-3..-1]
						opacity: 0.8

	/* Buttons were cut off a little to the left - this fixes it*/
	.umcMultiInputAddButton
		margin: -8px 0 0 -6px

.umc .umcContainerWidget:last-child > .umcLabelPane .umcMultiInput
	margin-bottom: 0

.umc .umcLabelPane .umcTooltipIcon
	span.umcHelpIcon
		opacity: 0.6

	&:hover span.umcHelpIcon
		background-position: -60px -200px

	&:active span.umcHelpIcon
		background-position: -60px -200px
		opacity: 1

.umc .umcMultiInputDisabled .umcMultiInputContainer .umcMultiInputLastRowEntry
	padding-right: 0

.umc .umcLiveSearchSidebarRadioButtonGroup
	margin-top: 1.5em

.umc .umcMultiSelect
	border: 1px solid $border-color

.umc .umcProgressBar,
.umc .umcProgressInfo
	width: 400px
	> *
		width: 100%

.umc .umcSearchBox
	.umcSearchIcon
		float: right
		margin: 6px 10px 0 0

		opacity: 1
		transition: opacity 0.25s

		&:hover
			opacity: 0.66

		&:active
			opacity: 1

	&.dijitDisabled .umcSearchIcon
		opacity: 0.3

