.umc .umcModuleTitle
	font-size: $font-size-headline
	color: $text-color
	font-weight: normal
	line-height: 1em
	padding: 18px 0

.umc .umcModule
	background-color: $document-background-color

	.umcModuleWrapper
		margin: 0 auto
		padding: 0

		.umcModuleContent .umcModuleContentChildWrapper.dijitHidden
			display: none !important

	$scrollToTopFloatingButton-diameter = 56px
	$scrollToTopFloatingButton-bottom-padding = 40px

	.scrollToTopFloatingButton
		position: fixed
		right: 40px
		bottom: $scrollToTopFloatingButton-bottom-padding
		width: $scrollToTopFloatingButton-diameter
		height: @width
		border-radius: 50%
		material-shadow(3)
		transition: $material-shadow-transition-value, transform 0.3s cubic-bezier(0.4, 0.0, 0.6, 1) // fade out transition
		transform: scale(0)
		overflow: hidden

		&:hover
			material-shadow(4)

		&:active
			material-shadow(5)

		&.shown
			transition: $material-shadow-transition-value, transform 0.2s cubic-bezier(0, 0, 0.2, 1) // fade in transition
			transform: scale(1)

		.icon
			icon-image(-300, -80, '../', '-white')	
			margin: 18px;
			transition: transform 0.2s 0.1s, opacity 0.4s;
			transform: rotate(-45deg) scale(0.5);

			^[-1].shown ^[-1..-1]
				transform: rotate(0) scale(1)

		.ink
			position: absolute
			width: @width * 2
			height: @width
			border-radius: 50%
			opacity: 1
			transform: scale(0)
			transition: transform 0.2s, opacity 0.6s
			background-color: rgba(0, 0, 0, 0.1)
	
	.scrollToTopFloatingButtonSpacer
		width: 100%
		height: 0
		transition: height 0.2s

		&.shown
			height: $scrollToTopFloatingButton-diameter + $scrollToTopFloatingButton-bottom-padding + 10px

