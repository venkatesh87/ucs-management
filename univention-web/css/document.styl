/* ======= Styling for the document itself (overriding dojo.css) ======== */

@import "variables"
@import url("../../../dojo/resources/dojo.css")

*:focus
	// remove outline in chromium
	outline: 0


.umc
	font-family: 'Roboto', sans-serif
	font-size: 14px
	color: $document-text-color


html
	height: 100%
	background-color: $document-background-color

body.umc,
.umc p
	line-height: 1.4em

.umc td,
.umc th
	padding: 0em 1em 0.3em 0em

.umc a
	color: $text-color-lightest
	text-decoration: underline

.umc .umcGalleryItem a
	text-decoration: none

.umc a:hover
	color: $text-color


body.umc .umcBackground,
body.umc
	overflow-x: hidden
	background-color: $document-background-color

.dj_ie9 body.umc.umcOverviewShown:before,
.dj_ie8 body.umc.umcOverviewShown:before,
body.umc.umcOverviewShown
	min-height: 100%


/* Headings */
.umc h1
	font-size: $font-size-headline
	font-weight: normal
	margin-bottom: 0.727em

.umc h2
	font-size: $font-size-title
	margin-top: 1em
	margin-bottom: 0.60em
	font-weight: 500

.umc h3, .umc h4, .umc h5, .umc h6
	font-size:1em
	font-weight: bold


/* paragraphs, quotes and lists */

.umc hr
	border-top: 2px solid $border-color

.umc p
	margin-bottom: 0.7em

/* pre and code */
.umc pre, .umc code 
	//font-family:inherit 
	//background-color: $document-shadedsection-background-color 
	border: 1px solid $document-border-color
	word-wrap: normal


/* tables */
.umc table.dojoTabular thead, .umc table.dojoTabular tfoot 
	background-color: $document-shadedsection-background-color 
	border: 1px solid $document-border-color 

/* classes for different shadow levels */
for i in (1..5)
	.umc .shadow-{i}
		material-shadow(i)

/* white cards as described by Google Material Design */
.umc .umcCard
	margin: 48px auto
	background: #fff
	padding: 14px
	border: none
	material-shadow(1)

	h2,
	h1
		&:first-child
			margin-top: 10px


	.dijitTextBox,
	.dijitSelect
		background-color: $document-background-color

	.umcPageFooter
		.dijitButton
			material-flat-button()

.umcStandby
	background: no-repeat center url('images/standbyAnimation.svg')


