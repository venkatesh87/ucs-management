$theme-color = rgb(20, 110, 220)

.umc
	min-height: 100%

	.umcHeader
		background-color: $theme-color
		box-sizing: content-box
		overflow: visible

		.umcHeaderLeft
			float: left
			height: 100%


		.umcHeaderRight
			float: right
			height: 100%
			margin-right: 0

		.umcLiveSearch .dijitTextBox
				&:before,
				&:after,
				&
					border-color: #282828

	.umcLiveSearch
		padding: 10px

	.umcGalleryPane
		clear: both

		.umcGalleryWrapperItem
			a
				text-decoration: none

			@media (max-width: 549px)
				padding: 10px

		.umcGalleryItem
			height: 60px

			&:hover
				background-color: $theme-color

				.umcGalleryDescription,
				.umcGalleryVersion
					color: #ffffff

			.umcGalleryDescription,
			.umcGalleryVersion
				min-height: 25px
				color: #787878

			.umcGalleryDescription,
			.umcGalleryVersion
				transition-property: color
				transition-duration: inherit

	#content
		opacity: 1
		transition: opacity 0.75s

		h1
			text-align: left
			padding: 10px
			margin-bottom: 0.5em

	&.standby
		background: no-repeat center url('/univention/js/dijit/themes/umc/images/standbyAnimation.svg')

		#content
			opacity: 0

