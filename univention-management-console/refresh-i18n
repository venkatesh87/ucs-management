cd src
lang=de
po=univention/management/console/$lang.po
pot=${po}t
pox=${po}x

xgettext --msgid-bugs-address=packages@univention.de --copyright-holder='Univention GmbH' -L Python -o $pot $(find . -type d -name .svn -prune -false -o -name '*.py')

xgettext --output=$pot \
	--language=Python \
	--keyword=N_:1 \
	--sort-output 

msgmerge --sort-output $po $pot > $pox

echo "Now you need to fix up all 'fuzzy' entries in your editor..."
read answ

if [ -n "$EDITOR" ]; then
    $EDITOR $pox
else
	vim $pox
fi

while true; do
	echo "Use this entry? (Y/n)"
	read yn

	if [ -z "$yn" -o "$yn" = "y" -o "$yn" = "Y" ]; then
		echo "Copying po file"
		cp $pox $po
		break
	elif [ "$yn" = "n" -o "$yn" = "N" ]; then
		echo "Aborting"
		break
	fi
	echo "Invalid answer, try again..."
done

rm -rf ${po}?

