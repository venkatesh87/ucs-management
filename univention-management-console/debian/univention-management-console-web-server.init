. /lib/lsb/init-functions
NAME='univention-management-console-web-server'
DESC=$(get_lsb_header_val "$0" Short-Description)
DAEMON="/usr/sbin/univention-management-console-web-server"
PIDFILE="/var/run/umc-web-server.pid"

if [ ! -x "$DAEMON" ]; then
	exit 0
fi

case "$1" in
	start)
		# check UCR autostart setting
		if [ -f "/usr/share/univention-config-registry/init-autostart.lib" ]; then
			. "/usr/share/univention-config-registry/init-autostart.lib"
			check_autostart "$NAME" umc/http/autostart
		fi
		log_daemon_msg "Starting $DESC" "$NAME"
		"$DAEMON" start
		log_end_msg $?
		;;
	stop)
		log_daemon_msg "Stopping $DESC" "$NAME"
		"$DAEMON" stop
		log_end_msg $?
		;;
	restart)
		# check UCR autostart setting
		if [ -f "/usr/share/univention-config-registry/init-autostart.lib" ]; then
			. "/usr/share/univention-config-registry/init-autostart.lib"
			check_autostart "$NAME" umc/http/autostart
		fi
		log_daemon_msg "Restarting $DESC" "$NAME"
		"$DAEMON" restart
		log_end_msg $?
		;;
	reload)
		log_daemon_msg "Reloading $DESC" "$NAME"
		"$DAEMON" reload
		log_end_msg $?
		;;
	status)
		status_of_proc -p "$PIDFILE" "$DAEMON" "$DESC"
		;;
	crestart)
		# check UCR autostart setting
		if [ -f "/usr/share/univention-config-registry/init-autostart.lib" ]; then
			. "/usr/share/univention-config-registry/init-autostart.lib"
			check_autostart "$NAME" umc/http/autostart
		fi
		log_action_msg "Restarting $DESC (if currently active)"
		pid="$(cat "$PIDFILE" 2>/dev/null)"
		if [ -n "$pid" -a -d "/proc/$pid" ]; then
			"$DAEMON" crestart
			log_action_end_msg $?
		else
			log_action_msg "$DESC is not running, no need to restart."
		fi
		;;
	*)
		echo "Usage: $0 {start|stop|restart|reload|crestart|status}"
		exit 1
		;;
esac
