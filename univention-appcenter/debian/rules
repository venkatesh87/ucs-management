%:
	dh $@ --with 'python_support'

UDM_PO_FILES := $(shell find udm -name '*.po')
UDM_MO_FILES := $(UDM_PO_FILES:%.po=%.mo)

APPCENTER_PKG_NAME := univention-appcenter
APPCENTER_MO_FILE := python/de.mo
APPCENTER_DST_DIR := debian/$(APPCENTER_PKG_NAME)
GERMAN_LC_MSG_DIR := /usr/share/locale/de/LC_MESSAGES
APPCENTER_LC_MSG_DIR := $(APPCENTER_DST_DIR)$(GERMAN_LC_MSG_DIR)

%.mo:	%.po
	msgfmt --check -o $@ $<

override_dh_auto_build: $(UDM_MO_FILES) $(APPCENTER_MO_FILE)
	dh-umc-module-build
	dh_auto_build

override_dh_auto_install:
	univention-install-config-registry
	univention-install-joinscript
	dh-umc-module-install
	dh_auto_install

	@set -e;\
	for i in $(UDM_MO_FILES); do\
		lang=`basename "$$i" .mo`;\
		domain=`dirname "$$i" | sed 's,^udm/,univention/admin/,;s,/,-,g'`;\
		o=debian/univention-management-console-module-appcenter/usr/share/locale/$$lang/LC_MESSAGES/$$domain.mo;\
		install -d "`dirname "$$o"`";\
		install -m 644 "$$i" "$$o";\
	done

	scripts/build-appcenter-po
	install -d $(APPCENTER_LC_MSG_DIR)
	install -m 644 $(APPCENTER_MO_FILE) \
		$(APPCENTER_LC_MSG_DIR)/$(APPCENTER_PKG_NAME).mo

override_dh_auto_test:
	ucslint
	dh_auto_test
